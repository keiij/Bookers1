

<h3>Books</h3>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Delete", book_path(book.id), method: :delete,  "data-confirm" => "本当に削除しますか？" %>
</td>
</tr>
<% end %>
</tbody>
</table>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>